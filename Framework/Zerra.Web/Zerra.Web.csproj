<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net5.0</TargetFrameworks>
    <Company>KaKush LLC</Company>
    <Authors>Steven Zawaski</Authors>
    <Product>Zerra Framework Web</Product>
    <Copyright>KaKush LLC</Copyright>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>Web and AspNetCore specific components for the Zerra Framework.

Commonly used types:
Zerra.Web.CQRSMiddleware
Zerra.Web.Logger
Zerra.Web.CheckBoxList</Description>
    <RepositoryUrl>https://github.com/szawaski/Zerra</RepositoryUrl>
    <PackageTags>Framework, CQRS, Microservice, Event Sourcing, Repository, ORM, ASPNET, Web</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="JavaScript\JavaScriptModels.tt" />
    <None Remove="TypeScript\TypeScriptModels.tt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="JavaScript\JavaScriptModels.tt">
      <CustomToolNamespace>TextTemplatingFileGenerator</CustomToolNamespace>
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>JavaScriptModels.js</LastGenOutput>
    </Content>
    <Content Include="TypeScript\TypeScriptModels.tt">
      <CustomToolNamespace>TextTemplatingFileGenerator</CustomToolNamespace>
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>TypeScriptModels.ts</LastGenOutput>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Zerra\Zerra.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup>
    <None Update="JavaScript\JavaScriptModels.js">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>JavaScriptModels.tt</DependentUpon>
    </None>
    <None Update="TypeScript\TypeScriptModels.ts">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>TypeScriptModels.tt</DependentUpon>
    </None>
  </ItemGroup>

</Project>
